<%- include('partials/header') %>
<%- include('partials/navbar', {user, active: "home"}) %>

<div class="container col-md-5 my-5">
    <div class="card">
      <div class="card-body">
  
        <form action="/novoAtendimento" method="POST" autocomplete="off">
        <div class="form-group mb-3">

            <p>Escolha os Serviços</p>

            <%servicos.forEach(servico => {%>
                <div class="form-check d-flex justify-content-between">

                    <span>
                        <input class="form-check-input" type="checkbox" name="servicosPrestados" value="<%=servico.id%>" id="checkbox<%=servico.id%>">
                        <label class="form-check-label" for="checkbox<%=servico.id%>">
                            <%=servico.descricao%>
                        </label>
                    </span>
                    <label class="form-check-label" for="checkbox<%=servico.id%>">
                        R$ <%=servico.preco%>
                    </label>

                </div>
              <%});%>

        </div>
        <div class="form-group mb-3">
          <label class="form-label" for="preco">Valor Adicional</label>
          <input type="text" class="form-control dinheiro" id="preco" name="valorAdicional" placeholder="Ex: R$ 25,00 ">
        </div>

        <label class="form-label" for="metodoPagamento">Método de Pagamento</label>
        <select class="form-select mb-4" name="metodoPagamento" id="metodoPagamento" required>
          <option value="">Selecione o método de pagamento</option>
          <%metodosPagamento.forEach(metodo => {%>
            <option value="<%=metodo.id%>"> <%=metodo.descricao%></option>
          <%});%>
        </select>

        <div class="form-group">
          <input type="hidden" name="userID" value="<%=user.id%>">
          <button type="submit" class="btn btn-dark w-100">Registrar Atendimento</button>
        </div>
        </form> 
  
      </div>
    </div>
  </div>
    
<%- include('partials/footer') %>